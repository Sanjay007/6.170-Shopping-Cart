<!DOCTYPE html>
<html>
<head>
  <title>Proj2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "custom" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<p>
<%= link_to_unless I18n.locale == :en, "EN", locale: :en %>
|
<%= link_to_unless I18n.locale == :es, "ES", locale: :es %>
</p>

<div id = "columns">
<div id = "side">

	<% if !!session[:user_id] %>
	 <p>Welcome, <%= User.find_by_id(session[:user_id]).name %> </p>
		<% if User.find_by_id(session[:user_id]).role == "admin"%>

			<%= link_to 'Orders', orders_path %><br />
			<%= link_to 'Products', products_path %><br />
			<%= link_to 'Users', users_path %><br />
			<br />
			<%= button_to 'Logout', logout_path, :method => :delete %>

		<% else %>
		<%= button_to 'Logout', logout_path, :method => :delete %>
	<br />

		<% if @cart %>
		
		<%= render @cart %>
		
		
		<% end %>
		<% end %>

	<% else %>
		<%= button_to 'Login', login_path %>
		<%= button_to 'Sign Up', new_user_path, :method => :get %>
		<br />
		<br />
		<% if @cart %>
			<%= render @cart %>
		<% end %>

		
	<% end %>

</div>

</div>
<%= yield %>

</body>
</html>

